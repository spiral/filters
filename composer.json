{
    "name": "spiral/filters",
    "type": "library",
    "description": "Deep Structural Validation, Data Mapper, Inheritance",
    "license": "MIT",
    "homepage": "https://spiral.dev",
    "support": {
        "issues": "https://github.com/spiral/framework/issues",
        "source": "https://github.com/spiral/filters"
    },
    "authors": [
        {
            "name": "Anton Titov (wolfy-j)",
            "email": "wolfy-j@spiralscout.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "spiral/core": "^2.10",
        "spiral/models": "^2.10",
        "spiral/translator": "^2.10",
        "spiral/validation": "^2.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5|^9.5",
        "mockery/mockery": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Spiral\\Filters\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spiral\\Tests\\Filters\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.10.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
